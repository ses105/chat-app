<div class="chat_header">
  <div class="left_header">
    <div class="room_name">hogefuga</div>
  </div>
  <div class="right_header">
    <div class="delete_room">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="chat_main">
  <div class="messages">
    <div class="message">
      <div class="message_top">
        <div class="message_user_name">Tom</div>
        <div class="message_date">2020/3/31(Wed) 12:43:30</div>
      </div>
      <div class="message_down">
        <div class="message_text">
          おはよう
        </div>
      </div>
    </div>

    <div class="message">
      <div class="message_top">
        <div class="message_user_name">Tom</div>
        <div class="message_date">2020/3/31(Wed) 12:43:30</div>
      </div>
      <div class="message_down">
        <div class="message_text">
          おはよう
        </div>
      </div>
    </div>
  </div>
</div>

<div class="chat_footer">
  <%= form_with(model:[@room,@message],local: true, html:{class: "message_form"}) do |f|%>
    <div class="left_form">
      <%= f.text_field :content, class: "form_text", placeholder: "type a message" %>
      <label class="form_image">
        <span class="image_file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: "form_submit" %>
  <% end %>
</div>

